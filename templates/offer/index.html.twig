{% extends 'base.html.twig' %}
{% block meta %}
 <meta name="base_url" content="http://www.fgtechs.fr/z-pedro/wwwluxuryservices">
    <meta name="csrf-token" content="9Tnm0YBCxgVTxoqI1HzccsU5NuE9RughZmhpzgXn">
    <!--  favicon -->
    <link rel="shortcut icon" href="assets/img/ico/fav.png">
{% endblock %}
{% block body %}


<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Our job offers</h2>
                        <span class="white-text">Search and filter by job category</span>
                        
                    </div>
                </div>
            </div>
        </section>
   {% for message in app.flashes('success') %}
				<div class="flash-notice bg-danger text-center ">
					{{ message }}
				</div>
			{% endfor %}
        <!-- Page Content-->
        <section id="job-offers" class="section-padding gray-bg">
            <div class="container">
                <div class="text-center mb-40">
                    <h2 class="section-title">We have the perfect job for you</h2>
                    <p class="section-sub">just like our candidates, we offer quality, serious & reliable job offers.</p>
                </div>
                <div class="portfolio-container">

                	<ul class="portfolio-filter brand-filter text-center">
							<li class="active waves-effect waves-light" data-group="all">All</li>
							{% for categori in category %}
						<li class=" waves-effect waves-light" data-group="{{ categori.category }}">{{ categori.category }}</li>
						{% endfor %}
							{# <a href="{{ path('app_offer_category', {'category': 'retail sales'}) }}"><li class=" waves-effect waves-light" data-group="retail">Retail sales</li></a>
							<a href="{{ path('app_offer_category', {'category': 'creative'}) }}"><li class=" waves-effect waves-light" data-group="creative">Creative</li></a>
							<a href="{{ path('app_offer_category', {'category': 'technology'}) }}"><li class=" waves-effect waves-light" data-group="technology">Technology</li></a>
							<a href="{{ path('app_offer_category', {'category': 'marketing & pr'}) }}"><li class=" waves-effect waves-light" data-group="marketing">Marketing & PR</li></a>
							<a href="{{ path('app_offer_category', {'category': 'fashion & luxury'}) }}"><li class=" waves-effect waves-light" data-group="fashion">Fashion & luxury</li></a>
							<a href="{{ path('app_offer_category', {'category': 'management & hr'}) }}"><li class=" waves-effect waves-light" data-group="management">Management & HR</li></a> #}
						</ul>
                    <div class="portfolio portfolio-with-title col-2 gutter mt-30">
{# form jobs #}
{% for offer in offers %}
                        <div class="portfolio-item" data-groups='["all", "{{ offer.category }}"]'>
                            <div class="portfolio-wrapper">
                                <div class="card job-card">
                                    <div class="card-content">
                                        <span class="title">
                                            <span class="card-title">{{ offer.title }}</span>
                                            <span class="ref grey-text">Ref. {{ offer.ref }}</span>
                                        </span>
                                        <div class="metas mb-20">
                                            <div class="meta">
                                                <i class="material-icons">&#xE53E;</i>{{ offer.salary }}k
                                            </div>
                                            <div class="meta">
                                                <i class="material-icons">&#xE916;</i>{{ offer.closedAt }}
                                            </div>
                                            <div class="meta">
                                                <i class="material-icons">&#xE55F;</i>{{ offer.location }}
                                            </div>
                                        </div>
                                        <p class="truncate-text">{{ offer.description }}</p>
                                    </div>
                                    <div class="card-action">
                                        <a class="btn btn-md primary border waves-effect waves-dark" href="{{ path('app_offer_show', {'id': offer.id}) }}">Details</a>
                                        <a class="btn btn-md primary waves-effect waves-light" href="{{ path('app_offer_apply', {'id': offer.id}) }}">Apply</a>
                                    </div>
                                </div>
                            </div>
                        </div>

            {% endfor %}
                        <div class="no-item"></div>
                    </div>
                </div>
            </div>
        </section>

        <section class="cta-candidate bg-fixed bg-cover overlay dark-5 padding-top-70 padding-bottom-50">
            <div class="container">
                <div class="row">
                    <div class="valign-wrapper text-center">
                        <div class="hero-intro valign-cell">
                            <h2 class="tt-headline clip is-full-width no-margin">
                                <span>You are </span>
                                <span class="tt-words-wrapper">
                                <b class="is-visible"></b>
                           			{% for categori in category %}
										<b class="">{{ categori.category }}</b>
										{# <b>Creative</b>
										<b>Marketing & PR</b>
										<b>Technology</b>
										<b>Fashion & luxury</b>
										<b>Retail sales</b> #}
									{% endfor %}
                                </span>
                            </h2>
                            <h3 class="c-secondary mb-30 no-margin">Sign-up and apply for jobs now</h3>
                            <p class="white-text section-sub">Each one of your skills is seen as precious resource to us, each one of your personality traits are considered as an added on value. Joining us is allowing our recruitment expertise and personal guidance to bring the best out in you by choosing the most suited position.</p>

                            <a href="{{ path('app_register')}}" class="btn border secondary waves-effect waves-light mt-40">Join us</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

</div>




{% endblock %}



    {% block javascripts %}
     
<script type="text/javascript">

    onAppReady(function() {
        $('.preload').remove();
    });
</script>
  
  {% endblock %}