{% extends 'base.html.twig' %}
{% block meta %}
  <meta name="base_url" content="http://www.fgtechs.fr/z-pedro/wwwluxuryservices">
    <meta name="csrf-token" content="9Tnm0YBCxgVTxoqI1HzccsU5NuE9RughZmhpzgXn">
    <!--  favicon -->
    <link rel="shortcut icon" href="assets/img/ico/fav.png">
{% endblock %}
{% block body %}




<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">{{ offer.title }}</h2>
                        <span class="white-text">Ref. {{ offer.ref }}</span>
                        <ol class="breadcrumb">
                            <li>
                                <div class="portfolio-nav">
                                     {% if previousOffer is not null %}
                                    <a href="{{ path('app_offer_show', {'id': previousOffer.id}) }}" class="waves-effect waves-dark"><i class="fa fa-angle-left" aria-hidden="true"></i> Prev</a>
                                     {% endif %}
                                    <a href="{{ path('app_offer') }}" class="waves-effect waves-dark"><i class="fa fa-th-large" aria-hidden="true"></i></a>
                                    {% if nextOffer is not null %}
                                    <a href="{{ path('app_offer_show', {'id': nextOffer.id}) }}" class="waves-effect waves-dark">Next <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                      {% endif %}
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>

        <!-- Page Content-->
        <section class="single-project-section section-padding light-gray-bg">
            <div class="container">
                <div class="project-overview">
                    <div class="row mb-80">
                        <div class="col-xs-12 col-md-8">
                            <p class="ref grey-text no-margin">Ref. {{ offer.ref }}</p>
                            <h2>{{ offer.title }}</h2>
                            <p>{{ offer.description }} </p>
                        </div>

                        <div class="col-xs-12 col-md-4 quick-overview">
                            <ul class="portfolio-meta">
                                <li><span> Pulished at </span>{{ offer.createdAt|date('d-m-Y') }}</li>
                                <li><span> Position </span>{{ offer.position }}</li>
                                <li><span> Contract Type </span>{{ offer.contractType }}</li>
                                <li><span> Salary </span>{{ offer.salary }}k </li>
                                <li><span> Location </span>{{ offer.location }}</li>
                                <li><span> Starting date </span>{{ offer.closedAt }}</li>
                            </ul>
                            <a class="btn btn-block gradient primary mt-30 waves-effect waves-light" href="#!">Apply for this job</a>
                            <div class="btn btn-block btn-success mt-30 waves-effect waves-light disabled">You have applied for this job</div>
                        </div>
                    </div>
                </div>

                <nav class="single-post-navigation no-margin" role="navigation">
                    <div class="row">

                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="previous-post-link">
                                  {% if previousOffer is not null %}
                                <a class="btn border primary waves-effect waves-dark" href="{{ path('app_offer_show', {'id': previousOffer.id }) }}">
                                    <i class="fa fa-long-arrow-left"></i>Previous
                                </a>
                            {% endif %}
                            </div>
                        </div>
                        <div class="hidden-xs hidden-sm col-md-4"></div>


                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="next-post-link">
                               {% if nextOffer is not null %}
                                <a class="btn border primary waves-effect waves-dark" href="{{ path('app_offer_show', {'id': nextOffer.id }) }}">
                                    Next <i class="fa fa-long-arrow-right"></i>
                                </a>
                            {% endif %}
                            </div>
                        </div>

                    </div>
                </nav>
            </div>
        </section>
       

    </div>

</div>



{% endblock %}



    {% block javascripts %}
     <script type="text/javascript">

    onAppReady(function() {
        $('.preload').remove();
    });
</script>
  
  {% endblock %}